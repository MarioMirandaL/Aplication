<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
  
       <h1>Lista de Empleados</h1>
  </div>
</div>
<br>


<table class="table table-condensed">
      <thead>
    <tr>
      <th>Nombre &nbsp;</th>
      <th>Edad &nbsp;</th>
      <th>Rut &nbsp;</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empleados.each do |empleado| %>
      <tr>
        <td><%= empleado.name %></td>
        <td><%= empleado.age %></td>
        <td><%= empleado.rut %></td>
        <td><%= link_to 'Mostrar ', empleado %></td>
        <td><%= link_to 'Editar', edit_empleado_path(empleado) %></td>
        <td><%= link_to 'Eliminar', empleado, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Empleado', new_empleado_path, class: 'btn btn-lg btn-danger'  %>
