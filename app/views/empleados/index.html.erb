<p id="notice"><%= notice %></p>

<h1>Empleados</h1>

<table  class="table table-condensed" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Rut</th>
      <th>Sueldo</th>
      <th>Email</th>
      <th>Telefono</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empleados.each do |empleado| %>
      <tr>
        <td><%= empleado.name %></td>
        <td><%= empleado.age %></td>
        <td><%= empleado.rut %></td>
        <td><%= empleado.sueldo %></td>
        <td><%= empleado.email %></td>
        <td><%= empleado.telefono %></td>
        <td><%= empleado.cargo %></td>
        <td><%= link_to 'Mostar', empleado %></td>
        <td><%= link_to 'Editar', edit_empleado_path(empleado) %></td>
        <td><%= link_to 'Eliminar', empleado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo empleado', new_empleado_path , class:'btn btn-lg btn-info'%>
